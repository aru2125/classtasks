<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Student Registration</title>
  <link rel="icon" type="image/png" sizes="32x32" href="/public/images/favicon-32x32.png">
  <link rel="apple-touch-icon" href="/public/images/apple-touch-icon.png">
  <link rel="stylesheet" href="/public/css/style.css">
  <style>
    .center-box { max-width: 400px; margin: 3rem auto; background: #fff; border-radius: 12px; box-shadow: 0 6px 24px rgba(47,138,77,0.08); padding: 2rem 2.2rem; text-align: center; }
    .logo { width: 70px; margin-bottom: 1rem; }
    .error { color: #d85742; background: #fff0f0; border-radius: 6px; padding: 0.5rem; margin-bottom: 1rem; }
    form label { display: block; margin: 1rem 0 0.5rem; text-align: left; }
    form input { width: 100%; padding: 0.5rem; border-radius: 7px; border: 1px solid #e2efe2; margin-top: 0.2rem; }
    button { width: 100%; background: #2f8a4d; color: #fff; border: none; border-radius: 7px; padding: 0.7rem; font-size: 1.1rem; margin-top: 1.2rem; cursor: pointer; }
    a { color: #2f8a4d; }
  </style>
</head>
<body style="background:linear-gradient(180deg,#f7fbf7 60%,#e2efe2 100%);">
  <div style="display:flex;justify-content:space-between;align-items:center;max-width:400px;margin:2rem auto 0 auto;">
    <img src="/public/images/apple-touch-icon.png" alt="Logo" class="logo">
    <a href="/admin/login" class="btn" style="background:#2f8a4d;color:#fff;padding:.5rem 1rem;border-radius:8px;text-decoration:none;font-weight:500;">Teacher Login</a>
  </div>
  <div class="center-box">
    <h2>Student Registration</h2>
    <% if (error) { %><div class="error"><%= error %></div><% } %>
    <form method="post" action="/student/register">
      <label>Username<input name="username" required></label>
      <label>Password<input name="password" type="password" required></label>
      <button>Register</button>
    </form>
    <p style="margin-top:1.2rem;">Already have an account? <a href="/student/login">Login here</a></p>
